<body>

    <header>
        <h1>Patient Management System</h1>
    </header>

    <div class="container">
        <!-- Patient Entry Form -->
        <div class="form-container">
            <h2>Add New Patient</h2>
            <form id="patientForm">
                <label for="patientName">Patient Name:</label>
                <input type="text" id="patientName" name="patientName" required>

                <label for="patientAge">Age:</label>
                <input type="number" id="patientAge" name="patientAge" required>

                <label for="sicknessCategory">Sickness Category:</label>
                <select id="sicknessCategory" name="sicknessCategory" required>
                    <option value="1">Category 1</option>
                    <option value="2">Category 2</option>
                    <option value="3">Category 3</option>
                    <option value="4">Category 4</option>
                </select>

                <button type="button" class="btn" onclick="addPatient()">Add Patient</button>
            </form>
        </div>

        <!-- Patients Table -->
        <h2>Patients List</h2>
        <table id="patientsTable">
            <thead>
                <tr>
                    <th>Patient Name</th>
                    <th>Age</th>
                    <th>Sickness Category</th>
                </tr>
            </thead>
            <tbody>
                <!-- Patient rows will be inserted here -->
            </tbody>
        </table>
    </div>

    <script>
        // Function to add a new patient to the table
        function addPatient() {
            // Get values from the form
            var patientName = document.getElementById('patientName').value;
            var patientAge = document.getElementById('patientAge').value;
            var sicknessCategory = document.getElementById('sicknessCategory').value;

            // Create a new table row
            var table = document.getElementById('patientsTable').getElementsByTagName('tbody')[0];
            var newRow = table.insertRow(table.rows.length);

            // Insert cells into the new row
            var cell1 = newRow.insertCell(0);
            var cell2 = newRow.insertCell(1);
            var cell3 = newRow.insertCell(2);

            // Append the values to the cells
            cell1.innerHTML = patientName;
            cell2.innerHTML = patientAge;
            cell3.innerHTML = "Category " + sicknessCategory;

            // Clear the form after submission
            document.getElementById('patientForm').reset();
        }
    </script>

</body>
</html>
